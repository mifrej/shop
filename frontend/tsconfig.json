{
  "compileOnSave": false,
  "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "jsx": "preserve",
      "lib": [
          "dom",
          "es2015",
          "es2016",
          "es2017"
      ],
      "module": "esnext",
      "moduleResolution": "node",
      "noEmit": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "preserveConstEnums": true,
      "removeComments": false,
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "target": "esnext"
  },
  "exclude": [
      ".next",
      "node_modules",
      "**/*.spec.ts",
      "**/*.spec.tsx",
      "**/*.test.ts",
      "**/*.test.tsx",
  ]
}
