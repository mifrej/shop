  "devDependencies": {
    "@types/graphql": "^14.0.7",
    "@types/node": "^11.10.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "ts-node": "^8.0.2",
    "ts-node-dev": "^1.0.0-pre.32",
    "tslint": "^5.13.1",
    "tslint-config-airbnb-base": "^0.3.0",
    "tslint-config-prettier": "^1.18.0",
